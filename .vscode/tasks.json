{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "server.cpp",
                "-o",
                "server",
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building the server"
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "client.cpp",
                "-o",
                "client",
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building the client"
        },
        {
            "label": "run server",
            "type": "shell",
            "command": ".\\server.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "run client",
            "type": "shell",
            "command": ".\\client.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
